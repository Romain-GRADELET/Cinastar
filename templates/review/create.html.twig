{% extends "base.html.twig" %}

{% block title %}Ajout de commentaire{% endblock %}

{% block body %}
                   
                {{form_start(formulaire, {"attr" :{"novalidate": "novalidate"}})}}

                <h2>Ajouter une critique sur le film : <strong>{{movie.title}}<strong> </h2>
                    
                    {{form_row(formulaire.username)}}
                    {{form_row(formulaire.email)}}
                    {{form_row(formulaire.content)}}
                    {{form_row(formulaire.rating)}}
                    {{form_row(formulaire.reactions)}}
                    {{form_row(formulaire.watchedAt)}}

                    <button type="submit" class="btn btn-primary">Validation</button>

                {{form_end(formulaire)}}
        
{% endblock %}