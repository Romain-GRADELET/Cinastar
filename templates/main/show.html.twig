{% extends 'base.html.twig'%}

{% block body %}
        <!-- main -->
    {# movieForTwig #}
        {% dump(movieForTwig) %}
        {#App\Entity\Movie {85 ▼
                -id: 1
                -title: "The jungle BOOK"
                -type: Proxies\__CG__\App\Entity\Type {2717 ▼
                    +__isInitialized__: false
                    -id: 1
                    -name: null
                    -movies: null
                    …2
                }
                }#}


    <div class="container bg-light pt-5">

        <div class="row mb-2">

            <div class="col">

                <div
                    class="row g-0 border rounded overflow-hidden flex-md-row align-items-start mb-4 shadow-smmm position-relative">
                    <div class="col-4 movie__poster img-thumbnail"
                        style="background-image: url({{ movieForTwig.poster }});">
                        <img src="{{ asset('images/poster-placeholder.png') }}" class="img-fluid">
                        <!-- img src="https://m.media-amazon.com/images/M/MV5BNThmZGY4NzgtMTM4OC00NzNkLWEwNmEtMjdhMGY5YTc1NDE4XkEyXkFqcGdeQXVyMTQxNzMzNDI@._V1_SX300.jpg" class="img-fluid" -->
                    </div>

                    <div class="col-8 p-4 d-flex flex-column position-static bg-light">
                        <a href="{{path ('favorites_movies_add', {'id': movieId}) }}" class="movie__favorite fs-1 my-2 mx-3 link-danger"><i class="bi bi-bookmark-plus"></i></a>
                        <strong class="d-inline-block mb-2 text-primary">{{ movieForTwig.type.name }}</strong>
                        <h3 class="mb-1">{{ movieForTwig.title }}</h3>
                        <div class="mb-1 text-muted">{{ movieForTwig.duration }} min</div>

                        <p>
                            {% for genre in movieForTwig.genre %}
                                <span class="badge bg-warning text-dark">{{genre.name}}</span>
                            {% endfor %}
                        </p>

                        <p>{{ movieForTwig.synopsis }}</p>

                        <div class="d-flex mb-4" style="color: orange;">

                        {% if movieForTwig.rating == 5 %}
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                        
                        {% elseif movieForTwig.rating > 4 %}
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-half"></i>

                        {% elseif movieForTwig.rating == 4 %}
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star"></i>

                        {% elseif movieForTwig.rating > 3 %}
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-half"></i>
                            <i class="bi bi-star"></i>
                        
                        {% elseif movieForTwig.rating == 3 %}
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-half"></i>
                            <i class="bi bi-star"></i>

                        {% elseif movieForTwig.rating > 2 %}
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-half"></i>
                            <i class="bi bi-star"></i>
                            <i class="bi bi-star"></i>

                        {% elseif movieForTwig.rating == 2 %}
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star"></i>
                            <i class="bi bi-star"></i>
                            <i class="bi bi-star"></i>
                        
                        {% elseif movieForTwig.rating > 1 %}
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-half"></i>
                            <i class="bi bi-star"></i>
                            <i class="bi bi-star"></i>
                            <i class="bi bi-star"></i>
                        
                        {% elseif movieForTwig.rating == 1 %}
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star"></i>
                            <i class="bi bi-star"></i>
                            <i class="bi bi-star"></i>
                            <i class="bi bi-star"></i>

                        {% elseif movieForTwig.rating > 0 %}
                            <i class="bi bi-star-half"></i>
                            <i class="bi bi-star"></i>
                            <i class="bi bi-star"></i>
                            <i class="bi bi-star"></i>
                            <i class="bi bi-star"></i>
                        
                        {% else %}
                            <i class="bi bi-star"></i>
                            <i class="bi bi-star"></i>
                            <i class="bi bi-star"></i>
                            <i class="bi bi-star"></i>
                            <i class="bi bi-star"></i>

                        {% endif %}
        
                            <span class="ps-1">{{ movieForTwig.rating }}</span>
                        </div>

                        {% if movieForTwig.type.name == 'Série' %}
                            <h2>3 Saisons</h2>
                            <ul class="list-unstyled">
                                <li><span class="badge bg-danger fs-6 mb-2">Saison 1</span><small class="ms-1">(10 épisodes)</small></li>
                                <li><span class="badge bg-danger fs-6 mb-2">Saison 2</span><small class="ms-1">(11 épisodes)</small></li>
                                <li><span class="badge bg-danger fs-6 mb-2">Saison 3</span><small class="ms-1">(12 épisodes)</small></li>
                            </ul>
                        {% endif %}

                        <dl class="row">
                            <dt class="col-sm-12">Avec</dt>
                            <dd class="col-sm-12">
                            {% for actor in movieForTwig.castings|sort((b, a)=> b.creditOrder <=> a.creditOrder)  %}
                                {% dump(movieForTwig) %}
                                {{ actor.person.firstname}} {{actor.person.lastname}} <em>({{actor.role}})</em><br>

                            {% endfor %}
                        
                            </dd>

                            <dt class="col-sm-12">Pays</dt>
                            <dd class="col-sm-12">{{ movieForTwig.country}}</dd>

                            <dt class="col-sm-12">Année</dt>
                            <dd class="col-sm-12">{{ movieForTwig.releaseDate | date('Y') }}</dd>
                        </dl>

                    </div>
                </div>

            </div>

        </div>

    </div>

{% endblock %}