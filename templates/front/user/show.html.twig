{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

<div class="container-md bg-light my-5 d-flex p-5">
    <div class="row m-auto">

        <div class="col">
            <h1>Détails du profil</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Prénom</th>
                        <td>{{ user.firstname }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ user.lastname }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    
                </tbody>
            </table>

            <a href="{{ path('default') }}" class="btn btn-primary btn-md mb-2">Retour à l'acceuil</a>

            <a href="{{ path('app_front_user_edit', {'id': user.id}) }}"class="btn btn-success btn-md mb-2">Modifier mon profil</a>

            {{ include('front/user/_delete_form.html.twig') }}
{% endblock %}
